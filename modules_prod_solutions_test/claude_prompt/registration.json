{
  "module_id": "claude_prompt",
  "lambda_name": "modules-prod_solutions_newstg_claude_prompt",
  "category": "ai",
  "label": "Claude AI Prompt",
  "description": "Send prompts to Claude AI and get intelligent responses",
  "api_key_required": true,
  "parameters": {
    "enrichment_inputs": [
      {
        "id": "prompt",
        "component": "dropdown",
        "label": "Prompt"
      }
    ],
    "user_inputs": [
      {
        "id": "system_prompt",
        "component": "code_editor",
        "label": "System Prompt",
        "placeholder": "Enter a system prompt to guide Claude's behavior (optional)",
        "autocomplete_suggestions": true,
        "height": "150px",
        "optional": true
      },
      {
        "id": "model",
        "component": "dropdown",
        "label": "Model",
        "options": [
          { "value": "claude-3-5-sonnet-20241022", "label": "Claude 3.5 Sonnet (Latest)" },
          { "value": "claude-3-5-haiku-20241022", "label": "Claude 3.5 Haiku (Fast)" },
          { "value": "claude-3-opus-20240229", "label": "Claude 3 Opus (Most Capable)" },
          { "value": "claude-3-sonnet-20240229", "label": "Claude 3 Sonnet" },
          { "value": "claude-3-haiku-20240307", "label": "Claude 3 Haiku" }
        ],
        "default_value": "claude-3-5-haiku-20241022"
      },
      {
        "id": "max_tokens",
        "component": "dropdown",
        "label": "Max Tokens",
        "options": [
          { "value": 256, "label": "256 tokens (Short)" },
          { "value": 512, "label": "512 tokens" },
          { "value": 1024, "label": "1024 tokens (Default)" },
          { "value": 2048, "label": "2048 tokens" },
          { "value": 4096, "label": "4096 tokens (Long)" }
        ],
        "default_value": 1024
      },
      {
        "id": "temperature",
        "component": "dropdown",
        "label": "Temperature (Creativity)",
        "options": [
          { "value": 0.0, "label": "0.0 (Deterministic)" },
          { "value": 0.3, "label": "0.3 (Focused)" },
          { "value": 0.5, "label": "0.5 (Balanced)" },
          { "value": 0.7, "label": "0.7 (Creative - Default)" },
          { "value": 0.9, "label": "0.9 (Very Creative)" },
          { "value": 1.0, "label": "1.0 (Maximum Creativity)" }
        ],
        "default_value": 0.7
      }
    ],
    "outputs": {
      "component": "checkbox_field_list",
      "options": [
        {
          "value": "response",
          "description": "Claude's response to the prompt"
        },
        {
          "value": "model_used",
          "description": "The Claude model that was used"
        },
        {
          "value": "input_tokens",
          "description": "Number of tokens in the input"
        },
        {
          "value": "output_tokens",
          "description": "Number of tokens in the output"
        },
        {
          "value": "total_tokens",
          "description": "Total number of tokens used"
        },
        {
          "value": "stop_reason",
          "description": "Reason why the response stopped"
        }
      ]
    }
  }
}